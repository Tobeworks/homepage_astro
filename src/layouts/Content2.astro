---
import {Image, Picture} from "@astrojs/image/components"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Layout from "../layouts/Layout.astro"
import Links from "../components/SEO-Linktree.vue"
import HeaderImage from "../components/HeaderImage.astro"
import ImageWD from '../components/Image-WD.astro'

const {
  content: {title = 'Tobeworks Webservices', teaser, publishDate, url, tags, img, art = "Blog"},
} = Astro.props

const tagList = tags.map((tag) => {
  if (tag != undefined) {
    return `#${tag} `
  }
})

const tagListMeta = tags.map((tag) => {
  let res = '';
  if (tag != undefined) {
    res += `${tag} `
  }
  return res;
})
---

<Layout title={title} description={`${title}, ${teaser}`}, keywords={tags}>
  <Header />
  <main>
    <section class="container bg-erieblack text-orange mainsection p-0">
      <div class="overflow-hidden">
        <div class="container col-12">
          <div class="row flex-lg-nowrap align-items-center g-5">
            <div class="order-lg-1 w-100">
              <HeaderImage />
              <ImageWD />
