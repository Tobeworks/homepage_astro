---
import {Image, Picture} from "@astrojs/image/components"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Layout from "../layouts/Layout.astro"
import Links from "../components/SEO-Linktree.vue"
import webdev from "/src/assets/images/web_dev.png"

const {
  content: {title, teaser, publishDate, url, tags, img, art = "Blog"},
} = Astro.props

const tagList = tags.map(tag => {
  return `#${tag} `
})
---
<Layout>
  <Header />
  <main>
    <section class="container bg-erieblack text-orange mainsection p-0">
      <div class="overflow-hidden">
        <div class="container col-12">
          <div class="row flex-lg-nowrap align-items-center g-5">
            <div class="order-lg-1 w-100">
              <Picture
                src={webdev}
                alt="Webdesign"
                widths={[250, 300, 400, 1000]}
                sizes="(max-width: 450px) 250px, (max-width: 1200px) 400px, (min-width: 1200px) 1100px"
                formats={["webp"]}
                class={`d-block mx-lg-auto img-fluid heropicture`}
              />
              <!-- <img style="clip-path: polygon(25% 0%, 100% 0%, 100% 99%, 0% 100%);" src="/src/assets/images/web_dev.png" class="d-block mx-lg-auto img-fluid" alt="Photo by Milad Fakurian" loading="lazy" width="2160" height="768"> -->
            </div>
            <div
              class="col-lg-6 col-xl-5 text-center text-lg-start m-4 pt-lg-5 mt-xl-4">
              <div class="lc-block mb-4">
                <div>
                  <h1 class="fw-bold display-6">{title}</h1>
                </div>
              </div>

              <div class="lc-block mb-5">
                <div>
                  <p class="my-2">{teaser}</p>
                </div>
              </div>

              <div class="lc-block mb-6">
                <a class="btn btn-erieblack px-4" href="#" role="button"
                  >Kostenloses Erstgespr√§ch</a
                >
              </div>

              <div class="lc-block">
                <div>
                  <p class="fw-bold py-2">{tagList}</p>
                </div>
              </div>
              <div class="row"></div>
            </div>
          </div><!-- /lc-block -->
        </div>
      </div>
    </section>

    <span id="contentStart"></span>

    <section class="bg-silver text-erieblack contentsection">
      <slot />
      <Links />
    </section>
  </main>
  <Footer />
</Layout>

<style>
  
  .heropicture{
    clip-path: polygon(25% 0%, 100% 0%, 100% 99%, 0% 100%);
  }

  .overlay {
    position: absolute;
    z-index: 5;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8); /* semi-transparent black */
  }
</style>
