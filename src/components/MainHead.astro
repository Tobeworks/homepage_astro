---
import {Seo} from "astro-seo-meta"
import "../assets/scss/boostrap.scss"
import "../assets/scss/styles.scss"
import "../../node_modules/aos/dist/aos.css"
const {
  title = "Tobeworks Websolutions",
  description = "Tobeworks Websolutions - Webentwicklung seit 2018",
  keywords = ['Webentwicklung','SEO']
} = Astro.props



---

<head>
  <meta charset="utf-8">
  <meta http-equiv="Content-Type" 
      content="text/html; charset=utf-8">
  <Seo title={title} description={description} keywords={keywords} />
  <link rel="icon" type="image/svg+xml" href="/favicon.png" />
  <script>
    import "../assets/scss/font-awesome.scss"
    import AddAOS from "../modules/AddAOS"
    AddAOS(
      ".contentsection img, .contentsection p, .contentsection h2, .contentsection a, .contentsection h3"
    )
  </script>

  <style is:inline>
    body {
      background-color: black;
      color: black;
    }
    a {
      color: black;
    }
  </style>
  <slot />
</head>
