---
let {text, classes, description} = Astro.props

const var_text = [
  "Los geht's",
  "Hier entlang",
  "Klick it",
  "Klick",
  "Schreib uns",
  "Jetzt durchstarten",
  "Kontakt aufnehmen",
  "Kontaktaufnahme",
];

const var_description = ["Kostenloses Erstgespr√§ch", "Du brauchst Hilfe oder Beratung?", "kostenlos Beratung bekommen?"];

if (description == undefined) {
  description = getRandomText(var_description);
}


if (text == undefined) {
  text = getRandomText(var_text)
}

let dynclasses = ['bg-silver', 'p-3 text-center'];

if(classes != undefined){
  dynclasses.pop();
  dynclasses.push(classes);
}



function getRandomText(var_text = []) {
  const randomIndex = Math.floor(Math.random() * var_text.length)
  return var_text[randomIndex]
}
---

<div class:list={dynclasses}>
  <div class="my-1">{description}</div>
  <a href="/kontakt#contentStart" class="btn btn-erieblack"
    >{text} <i class="fa-light fa-caret-right"></i></a
  >
</div>
