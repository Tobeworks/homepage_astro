          data-bs-ride="carousel"
          data-aos="fade-in"
          data-aos-duration="1000"
          data-aos-delay="500">
          <div class="carousel-inner">
            <div class="carousel-item">
              <div class="carousel-block" id="carousel-page1">
                <div class="carousel-img">
                  <img
                    src={react.src}
                    class="img-fluid"
                    alt="app development react logo"
                  />
                </div>
                <div class="carousel-body">
                  <div class="carousel-flex d-flex justify-content-between">
                    <div class="p-2 bd-highlight">
                      <button
                        class="btn btn-link"
                        data-bs-target="#carousel"
                        data-bs-slide="prev"
                        aria-label="Zurück zum vorherigen Slide">
                        <i class="bi bi-caret-left-fill"></i>
                      </button>
                    </div>
                    <div class="p-2 bd-highlight">
                      <h3>App Development</h3>
                    </div>
                    <div class="p-2 bd-highlight">
                      <button
                        class="btn btn-link"
                        data-bs-target="#carousel"
                        data-bs-slide="next"
                        aria-label="Zurück zum nächsten Slide">
                        <i class="bi bi-caret-right-fill"></i>
                      </button>
                    </div>
                  </div>
                  <div class="carousel-text">
                    Wir entwicklen mobile Apps für nahezu alle Usecases. Hybrid
                    für iOS und Android.
                  </div>
                </div>
                <div class="carousel-footer text-center p-2">
                  <img src={technpm.src} alt="npm" />
                  <img src={techreact.src} alt="react" />
                  <img src={techjs.src} alt="Javascript" />
                </div>
              </div>
            </div>
            <div class="carousel-item active">
              <div class="carousel-block" id="carousel-page2">
                <div class="carousel-img">
                  <img
                    src={gears.src}
                    class="img-fluid"
                    alt="app development react logo"
                  />
                </div>
                <div class="carousel-body">
                  <div class="carousel-flex d-flex justify-content-between">
                    <div class="p-2 bd-highlight">
                      <button
                        class="btn btn-link"
                        data-bs-target="#carousel"
                        data-bs-slide="prev"
                        aria-label="Zurück zum vorherigen Slide">
                        <i class="bi bi-caret-left-fill"></i>
                      </button>
                    </div>
                    <div class="p-2 bd-highlight">
                      <h3>Web Development</h3>
                    </div>
                    <div class="p-2 bd-highlight">
                      <button
                        class="btn btn-link"
                        data-bs-target="#carousel"
                        data-bs-slide="next"
                        aria-label="Zurück zum nächsten Slide">
                        <i class="bi bi-caret-right-fill"></i>
